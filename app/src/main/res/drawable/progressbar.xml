<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="0"
                android:centerColor="@color/colorGray"
                android:endColor="@color/colorGray"
                android:startColor="@color/colorGray" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/colorGreen"
                    android:startColor="@color/colorGreen"
                    android:centerColor="@color/colorGreen"
                    />
            </shape>
        </clip>
    </item>

</layer-list>