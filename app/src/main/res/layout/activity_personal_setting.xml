<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorGrayLicht"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar_head"/>

    <TextView
        android:padding="10dp"
        style="@style/Text_SettingTitle_Style"
        android:text="基本信息"
        />

    <RelativeLayout
        android:id="@+id/rl_person_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            style="@style/Text_SettingTitle_Style"
            android:layout_centerVertical="true"
            android:text="昵称"
            />

        <TextView
            android:id="@+id/tv_person_username"
            android:hint="昵称"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/Text_SettingTitle_Style"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/setting"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_person_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            style="@style/Text_SettingTitle_Style"
            android:layout_centerVertical="true"
            android:text="性别"
            />
        <TextView
            android:id="@+id/tv_person_sex"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/Text_SettingTitle_Style"
            android:hint="性别"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/setting"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <RelativeLayout
        android:id="@+id/rl_person_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            style="@style/Text_SettingTitle_Style"
            android:layout_centerVertical="true"
            android:text="地区"
            />
        <TextView
            android:id="@+id/tv_person_address"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/Text_SettingTitle_Style"
            android:hint="地区"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/setting"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:padding="10dp"
        style="@style/Text_SettingTitle_Style"
        android:text="个性签名"
        />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/rl_person_signa"
        android:background="#ffffff">
        <TextView
            android:enabled="false"
            android:id="@+id/tv_person_signa"
            style="@style/Text_SettingTitle_Style"
            android:hint="介绍一下自己吧"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_security"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            style="@style/Text_SettingTitle_Style"
            android:text="安全信息"
            />

        <RelativeLayout
            android:id="@+id/rl_person_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="5dp"
                style="@style/Text_SettingTitle_Style"
                android:layout_centerVertical="true"
                android:text="手机"
                />
            <TextView
                android:id="@+id/tv_person_phonenumber"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/Text_SettingTitle_Style"
                android:hint="手机"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/setting"
                android:hint="密码"
                android:textSize="16sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <RelativeLayout
            android:id="@+id/rl_person_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="5dp"
                style="@style/Text_SettingTitle_Style"
                android:layout_centerVertical="true"
                android:text="密码"
                />


            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/et_register_password"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/setting"
                android:hint="密码"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_person_logout"
            style="@style/BT_Login_Style"
            android:layout_marginBottom="15dp"
            android:background="@drawable/selector_bt_login"
            android:text="注销"
            />
    </LinearLayout>


</LinearLayout>