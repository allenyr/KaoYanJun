<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sharon.allen.a18_sharon.view.CircleImageView.CircleImageView
            android:id="@+id/civ_reply_head"
            style="@style/Img_Head_Style"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_reply_username"
                    android:text="allen"
                    style="@style/Text_Name_Style"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_reply_sex"
                    style="@style/Img_Sex_Style"
                     />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_reply_time"
                    android:paddingTop="5dp"
                    android:text="12-13 08:11"
                    style="@style/Text_Time_Style"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_reply_type"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="60dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:text="沙发是的发送到"
        android:id="@+id/tv_reply_content"
        style="@style/Text_Content_Style"
        />

    <LinearLayout
        android:gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_reply_up"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/up"
                android:layout_marginRight="10dp"
                style="@style/Text_Count_Style"
                />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_reply_up"
                android:text="0"
                style="@style/Text_Count_Style"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply_down"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/down"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_reply_down"
                android:text="0"
                style="@style/Text_Count_Style"

                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>