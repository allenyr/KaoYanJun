<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_comment_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sharon.allen.a18_sharon.view.CircleImageView.CircleImageView
            android:id="@+id/iv_comment_head"
            style="@style/Img_Head_Style"
             />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_comment_name"
                        android:text="用户名"
                        style="@style/Text_Name_Style"
                        />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/iv_comment_sex"
                        style="@style/Img_Sex_Style"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_comment_time"
                        android:text="时间"
                        style="@style/Text_Time_Style"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:id="@+id/tv_comment_content"
        android:text="hello"
        android:layout_marginBottom="20dp"
        style="@style/Text_Content_Style"
        />
</LinearLayout>