<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/ll_message_item"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_message_senderurl"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="sender"
                android:id="@+id/tv_message_sender"
                style="@style/Text_Name_Style"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_message_sex"
                style="@style/Img_Sex_Style"
                />

        </LinearLayout>

        <TextView
            android:text="评论"
            android:id="@+id/tv_message_detail"
            style="@style/Text_Content_Style"
             />
        <TextView
            android:text="时间"
            android:id="@+id/tv_message_time"
            style="@style/Text_Time_Style"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_message_img"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</LinearLayout>