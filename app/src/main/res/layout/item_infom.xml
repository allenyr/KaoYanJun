<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_database_menus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/ico_dir"
            android:id="@+id/iv_file_ico"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="文件晚上返款方式开发商开发看是否开始的疯狂水电费水电费水电费水电费客户端发送"
                android:id="@+id/tv_database_text"
                style="@style/Text_Content_Style"
                />
        </LinearLayout>

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_file_share"
            android:background="@drawable/ico_share"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>


</LinearLayout>