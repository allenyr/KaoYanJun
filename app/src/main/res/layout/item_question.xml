<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:allenyr="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootview_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sharon.allen.a18_sharon.view.CircleImageView.CircleImageView
            android:transitionName="share_head"
            android:id="@+id/civ_question_head"
            style="@style/Img_Head_Style"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_question_username"
                    android:text="allen"
                    style="@style/Text_Name_Style"
                     />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iv_question_sex"
                    style="@style/Img_Sex_Style"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_question_time"
                android:paddingTop="5dp"
                android:text="12-13 08:11"
                style="@style/Text_Time_Style"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/iv_question_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_circle_red_bg"
                    android:textStyle="bold"
                    android:text="未解决"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:text="沙发是的发送到"
        android:id="@+id/tv_question_content"
        style="@style/Text_Content_Style"
        />
    <LinearLayout
        android:gravity="right"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_question_share"
                android:layout_marginRight="30dp"
                android:background="@drawable/ico_share"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:text="回答"
                android:layout_marginRight="10dp"
                style="@style/Text_Count_Style"
                />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_question_replycount"
                android:text="0"
                style="@style/Text_Count_Style"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>